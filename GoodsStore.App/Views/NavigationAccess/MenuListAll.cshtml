@model List<MenuRegistrationViewModel>

<h1>Menus Controller</h1>
<br />
<br />
<div id="view-all">
    <div>
        <table id="tbMenuList" class="table table-hover" style="width:100%">
            <thead class="thead-light" >
                <tr>
                    <th class="col-sm-1" scope="col">Id</th>
                    <th class="col-sm-2" scope="col">Main Menu</th>
                    <th class="col-sm-2" scope="col">Title</th>
                    <th class="col-sm-2" scope="col">Label</th>
                    <th class="col-sm-2" scope="col">Data Created</th>
                    <th class="col-sm-1" scope="col">Sequence</th>
                    <th class="col-sm-2" scope="col">Action</th>
                    <th class="col-sm-2" scope="col">Status</th>
                    <th colspan="2">
                        <a onclick="showInPopup('@Url.Action("MenuAddOrEdit","NavigationAccess",null,Context.Request.Scheme)','New Menu')"
                           class="btn btn-primary text-white" style="width:140px"><i class="fas fa-random"></i> New Menu</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.MenuId)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.MainMenu.Title)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Label)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.DtRegistered)
                        </td>
                        <td class="col-sm-1">
                            @Html.DisplayFor(modelItem => item.Sequence)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Action)
                        </td>
                        <td class="col-sm-2">
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td class="col-sm-1">
                            <a onclick="showInPopup('@Url.Action("MenuAddOrEdit","NavigationAccess",new {id=item.MenuId},Context.Request.Scheme)','Update Menu')"
                           class="btn btn-success btn-sm" style="width:60px">
                                <i class="class=" fas fa-edit""></i>
                                Edit
                            </a>
                        </td>
                        <td class="col-sm-1">
                            <form asp-action="Delete" asp-route-id="@item.MenuId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                <input type="hidden" asp-for="@item.MenuId" />
                                <button type="submit" class="btn btn-danger btn-sm" style="width:60px"><i class="far fa-trash-alt"></i>Delete</button>
                            </form>                                                        
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }    
}
